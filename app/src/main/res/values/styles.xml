<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMarun</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">#ff00ee</item>
    </style>
    <style name="AppFullScreenTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="AppFullScreenWithOutNetworkBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorMarun</item>
        <item name="colorPrimaryDark">@color/colorMarun</item>
        <item name="colorAccent">@color/colorMarun</item>
    </style>
</resources>
